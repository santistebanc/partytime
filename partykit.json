{
  "$schema": "https://www.partykit.io/schema.json",
  "name": "snapquiz",
  "main": "src/room.ts",
  "compatibilityDate": "2025-08-31",
  "serve": {
    "path": "dist",
    "build": {
      "entry": "src/client.tsx",
      "bundle": true,
      "splitting": false,
      "outdir": "dist",
      "minify": false,
      "format": "esm",
      "sourcemap": true,
      "loader": {
        ".tsx": "tsx",
        ".ts": "ts",
        ".css": "css"
      }
    }
  },
  "parties": {
    "room": "src/room.ts"
  }
}
